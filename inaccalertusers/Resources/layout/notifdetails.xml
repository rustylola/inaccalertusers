<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:id="@+id/notifdetails_bottomsheets">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/loginPrimary"/>
    
    

    <LinearLayout
        android:id="@+id/layoutdetails"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@color/loginAccent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/upperlayout"
            android:orientation="vertical"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_weight="0.6">
        <TextView
            android:id="@+id/closedetails"
            android:clickable="true"
            android:text="X"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:textColor="@color/colorBlack"
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>

            <ImageView
                android:contentDescription="@string/icon_app"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_logo"/>
            <TextView
                android:id="@+id/checkdetails"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:text="@string/checkdetail"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lowerlayout"
            android:orientation="vertical"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_weight="0.6">

            <LinearLayout
                android:id="@+id/currentlocationdetail"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:contentDescription="@string/icon_app"
                    android:src="@drawable/ic_pinme"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/detaillocation"
                    android:text="@string/currentlocationstring"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/estimatetimelayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:contentDescription="@string/icon_app"
                    android:src="@drawable/ic_nearby"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/receiveby"
                    android:text="@string/sendto"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/estimatetime"
                    android:text="@string/near"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"/>

                
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
            
                <Button
                    android:text="@string/sendrequest"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/gonotify"
                    android:textColor="@color/colorsearch"
                    android:background="@color/loginPrimary"
                    android:elevation="2dp"
                    android:visibility="visible"/>

            </RelativeLayout>

        </LinearLayout>
    
    </LinearLayout>

</FrameLayout>
