<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:id="@+id/volunteer_details"
    android:background="@color/colorBlack">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/loginPrimary"
        android:layout_gravity="top"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/callandarrivelayout"
        android:visibility="visible"
        android:layout_height="150dp"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/colorWhite">

        <TextView
        android:id="@+id/volunteerdetails"
        android:text="@string/volunteerinfo"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:gravity="center"/>
        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/loginPrimary"/>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/callandmakereport"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="@color/colorWhite">

            <RelativeLayout
                android:id="@+id/calluserbtn"
                android:onClick="true"
                android:layout_margin="15dp"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/btnstyleplain">
            
            <ImageView
                android:contentDescription="@string/icon_app"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@drawable/ic_call"/>

        </RelativeLayout>
            <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/loginPrimary"/>
        
        <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:id="@+id/nameanddistance">
            
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/namelayout"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            
                <TextView
                    android:id="@+id/volunteernamehere"
                    android:text="@string/nameuser"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/volunteername"
                    android:text="@string/test"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:gravity="center|right"/>

            </LinearLayout>
            
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/distancelayout"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                
                <TextView
                    android:id="@+id/volunteerdistancehere"
                    android:text="@string/distanceloc"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/volunteerdistance"
                    android:text="@string/test"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:gravity="center|right"/>
            
            </LinearLayout>

            
        </LinearLayout>
        
        </LinearLayout>

    </LinearLayout>


</FrameLayout>
