<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="350dp"
    android:paddingBottom="25dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewnotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/notifynowgo"
        android:textColor="@color/loginPrimary"
        android:textStyle="bold"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/loginPrimary"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/colorWhite"
        android:id="@+id/layoutnotifynow">


        <ImageView
            android:contentDescription="@string/icon_app"
            android:layout_below="@+id/textViewnotify"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_click_it"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/loginPrimary"/>
    
        <Button
            android:text="@string/okbtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:id="@+id/clickok"
            android:textAllCaps="false"
            android:background="@drawable/btnstyleplain"/>

</LinearLayout>