<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:minHeight="420dp"
    android:minWidth="300dp"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.2">
        
        <ProgressBar
            android:id="@+id/progressBarWaitingRequest"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/loginPrimary"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_below="@id/progressBarWaitingRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="22sp"
            android:layout_marginTop="15dp"
            android:text="@string/finding"/>
    
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayoutdetails"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.4">
    
        <ImageView
            android:contentDescription="@string/icon_app"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_logo"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/nameandlocation"
            android:text="@string/sendrequestfrom"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/nameofuser"
            android:text="@string/nameuser"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/nameoflocation"
            android:text="@string/namelocation"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutbuttonpart"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.1">
    
        <Button
            android:id="@+id/cancelbutton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textAllCaps="false"
            android:background="@color/loginPrimary"
            android:text="@string/canceltext"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>

</LinearLayout>
